>
  <div class="ai-slider-wrapper-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign slide_image_key = 'slide_' | append: i | append: '_image'
        assign slide_title_key = 'slide_' | append: i | append: '_title'
        assign slide_description_key = 'slide_' | append: i | append: '_description'
        assign slide_link_key = 'slide_' | append: i | append: '_link'

        assign slide_enabled = block.settings[slide_enabled_key]
        assign slide_image = block.settings[slide_image_key]
        assign slide_title = block.settings[slide_title_key]
        assign slide_description = block.settings[slide_description_key]
        assign slide_link = block.settings[slide_link_key]
      %}

      {% if slide_enabled %}
        <div class="ai-slider-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 1200 }}"
              alt="{{ slide_image.alt | escape }}"
              class="ai-slider-slide-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
            >
          {% else %}
            <div class="ai-slider-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-slider-empty-state-{{ ai_gen_id }}">
                Agrega una imagen para la diapositiva {{ i }}
              </div>
            </div>
          {% endif %}

          {% if block.settings.show_overlay %}
            <div class="ai-slider-slide-overlay-{{ ai_gen_id }}"></div>
          {% endif %}

          <div class="ai-slider-slide-content-{{ ai_gen_id }}">
            {% if slide_title != blank %}
              <h2 class="ai-slider-slide-title-{{ ai_gen_id }}">{{ slide_title }}</h2>
            {% endif %}

            {% if slide_description != blank %}
              <div class="ai-slider-slide-description-{{ ai_gen_id }}">{{ slide_description }}</div>
            {% endif %}
          </div></div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-slider-controls-{{ ai_gen_id }}">
    {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
      <a href="{{ block.settings.cta_link }}" class="ai-slider-cta-{{ ai_gen_id }}">
        {{ block.settings.cta_text }}
      </a>
    {% endif %}

    <div class="ai-slider-pagination-{{ ai_gen_id }}">
      {% assign active_slides = 0 %}
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign slide_enabled = block.settings[slide_enabled_key]
        %}
        {% if slide_enabled %}<button
            class="ai-slider-dot-{{ ai_gen_id }} {% if active_slides == 0 %}active{% endif %}"
            data-slide="{{ active_slides }}"
            aria-label="Ir a diapositiva {{ active_slides | plus: 1 }}"
          ></button>
          {% assign active_slides = active_slides | plus: 1 %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</ai-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class AiSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-slider-wrapper-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slider-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slider-dot-{{ ai_gen_id }}');
        this.totalSlides = this.slides.length;

        if (this.totalSlides <= 1) return;

        this.setupEventListeners();
        this.startAutoplay();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.goToSlide(index);
          });
        });

        this.addEventListener('mouseenter', () => {
          this.stopAutoplay();
        });

        this.addEventListener('mouseleave', () => {
          this.startAutoplay();
        });
      }

      goToSlide(slideIndex) {
        if (slideIndex < 0 || slideIndex >= this.totalSlides) return;

        this.currentSlide = slideIndex;
        const translateX = -slideIndex * 100;
        this.wrapper.style.transform = `translateX(${translateX}%)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === slideIndex);
        });
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.totalSlides;
        this.goToSlide(nextIndex);
      }

      startAutoplay() {
        if (this.totalSlides <= 1) return;
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_speed | times: 1000 }});
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }
    }

    customElements.define('ai-slider-{{ ai_gen_id }}', AiSlider{{ ai_gen_id }});
  })();
</script>

