{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-slider-wrapper-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
  }

  .ai-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.slide_padding }}px;
    min-height: {{ block.settings.slider_height }}px;
  }

  .ai-slider-slide-content-{{ ai_gen_id }} {
    text-align: center;
    max-width: 600px;
    color: {{ block.settings.text_color }};
  }

  .ai-slider-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .ai-slider-slide-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-slider-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
  }

  .ai-slider-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-slider-slide-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .ai-slider-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height:100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .ai-slider-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-slider-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    z-index: 4;
  }

  .ai-slider-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.cta_background_color }};
    color: {{ block.settings.cta_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    margin-bottom: 32px;
  }

  .ai-slider-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cta_hover_color }};
  }

  .ai-slider-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    z-index: 4;
  }

  .ai-slider-pagination-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .ai-slider-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_inactive_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;opacity: 0.6;
  }

  .ai-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);opacity: 1;
  }

  .ai-slider-dot-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  @media screen and (max-width: 749px) {
    .ai-slider-slide-{{ ai_gen_id }} {
      padding: {{ block.settings.slide_padding | times: 0.7 }}px;
      min-height: {{ block.settings.slider_height | times: 0.8 }}px;
    }

    .ai-slider-slide-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-slider-slide-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-slider-cta-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: 14px;
    }
  }
{% endstyle %}<ai-slider-{{ ai_gen_id }}
  class="ai-slider-container-{{ ai_gen_id }}"
