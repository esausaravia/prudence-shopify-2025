{% assign section_id = section.id %}

<div class="custom-slider-{{ section_id }}">
  <div class="slider-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="slide">
          <a href="{{ block.settings.link | default: '#' }}">
            <picture>
              {% if block.settings.image_mobile %}
                <source media="(max-width: 749px)" srcset="{{ block.settings.image_mobile | image_url: width: 900 }}">
              {% endif %}
              {% if block.settings.image_tablet %}
                <source media="(max-width: 1024px)" srcset="{{ block.settings.image_tablet | image_url: width: 1200 }}">
              {% endif %}
              {% if block.settings.image_desktop %}
                <img src="{{ block.settings.image_desktop | image_url: width: 2000 }}" alt="slide">
              {% else %}
                <div style="background:#f2f2f2;height:100%;display:flex;align-items:center;justify-content:center;color:#999;">Sin imagen</div>
              {% endif %}
            </picture>
          </a>

          {% if block.settings.overlay_opacity > 0 %}
            <div class="overlay" style="background:rgba(0,0,0,{{ block.settings.overlay_opacity | divided_by: 100.0 }});"></div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.custom-slider-{{ section_id }} {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.custom-slider-{{ section_id }} .slider-wrapper {
  display: flex;
  transition: transform 0.6s ease;
}

.custom-slider-{{ section_id }} .slide {
  position: relative;
  min-width: 100%;
  height: 600px;
  overflow: hidden;
}

.custom-slider-{{ section_id }} img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.custom-slider-{{ section_id }} .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

@media (max-width: 1024px) {
  .custom-slider-{{ section_id }} .slide { height: 400px; }
}

@media (max-width: 749px) {
  .custom-slider-{{ section_id }} .slide { height: 300px; }
}
</style>

