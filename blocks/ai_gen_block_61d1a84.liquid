>
  <div class="ai-slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-slider-track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign title_key = 'slide_' | append: i | append: '_title'
          assign subtitle_key = 'slide_' | append: i | append: '_subtitle'
          assign cta_text_key = 'slide_' | append: i | append: '_cta_text'
          assign cta_url_key = 'slide_' | append: i | append: '_cta_url'
          assign enabled_key = 'slide_' | append: i | append: '_enabled'

          assign slide_image = block.settings[image_key]
          assign slide_title = block.settings[title_key]
          assign slide_subtitle = block.settings[subtitle_key]
          assign slide_cta_text = block.settings[cta_text_key]
          assign slide_cta_url = block.settings[cta_url_key]
          assign slide_enabled = block.settings[enabled_key]
        %}

        {% if slide_enabled %}
          <div class="ai-slider-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            {% if slide_image %}
              <img
                src="{{ slide_image | image_url: width: 2000 }}"
                alt="{{ slide_image.alt | escape }}"
                class="ai-slider-image-{{ ai_gen_id }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
              >
            {% else %}
              <div class="ai-slider-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-slider-empty-state-{{ ai_gen_id }}">
                  Add an image for slide {{ i }}
                </div>
              </div>
            {% endif %}

            {% if block.settings.show_overlay %}
              <div class="ai-slider-overlay-{{ ai_gen_id }}"></div>
            {% endif %}

            {% if slide_title != blank or slide_subtitle != blank or slide_cta_text != blank %}
              <div class="ai-slider-content-{{ ai_gen_id }}">
                {% if slide_title != blank and block.settings.show_titles %}
                  <h2 class="ai-slider-title-{{ ai_gen_id }}">{{ slide_title }}</h2>
                {% endif %}

                {% if slide_subtitle != blank and block.settings.show_subtitles %}
                  <p class="ai-slider-subtitle-{{ ai_gen_id }}">{{ slide_subtitle }}</p>
                {% endif %}

                {% if slide_cta_text != blank and slide_cta_url != blank and block.settings.show_cta %}
                  <a href="{{ slide_cta_url }}" class="ai-slider-cta-{{ ai_gen_id }}">
                    {{ slide_cta_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_navigation %}
      <button class="ai-slider-navigation-{{ ai_gen_id }} ai-slider-prev-{{ ai_gen_id }}" aria-label="Slide anterior">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button class="ai-slider-navigation-{{ ai_gen_id }} ai-slider-next-{{ ai_gen_id }}" aria-label="Siguiente slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-slider-dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign enabled_key = 'slide_' | append: i | append: '_enabled'
            assign slide_enabled = block.settings[enabled_key]
          %}
          {% if slide_enabled %}
            <button
              class="ai-slider-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-slide="{{ forloop.index0 }}"
              aria-label="Ir al slide {{ i }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</slider-component-{{ ai_gen_id }}><script>
  (function() {
    class SliderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.isAutoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slider-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slider-dot-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-slider-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-slider-next-{{ ai_gen_id }}');

        this.totalSlides = this.slides.length;

        if (this.totalSlides <= 1) return;

        this.setupEventListeners();
        this.updateSlider();

        if (this.isAutoplay) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isAutoplay) this.startAutoplay();
        });document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') this.prevSlide();
          if (e.key === 'ArrowRight') this.nextSlide();
        });
      }

      updateSlider() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateSlider();
      }

      prevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.totalSlides - 1 : this.currentSlide - 1;
        this.updateSlider();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      startAutoplay() {
        if (this.totalSlides <= 1) return;
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('slider-component-{{ ai_gen_id }}', SliderComponent{{ ai_gen_id }});
  })();
</script>

