  }

  .ai-slider-navigation-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_hover_bg_color }};
    opacity: 1;
  }

  .ai-slider-prev-{{ ai_gen_id }} {
    left: {{ block.settings.nav_margin }}px;
  }

  .ai-slider-next-{{ ai_gen_id }} {
    right: {{ block.settings.nav_margin }}px;
  }

