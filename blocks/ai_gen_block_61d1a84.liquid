{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height }}px;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-slider-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    color: {{ block.settings.text_color }};
    z-index: 2;
    max-width: 90%;
  }

  .ai-slider-content-{{ ai_gen_id }}.left { left: 10%; transform: translateY(-50%); text-align: left; }
  .ai-slider-content-{{ ai_gen_id }}.center { left: 50%; transform: translate(-50%, -50%); text-align: center; }
  .ai-slider-content-{{ ai_gen_id }}.right { right: 10%; transform: translateY(-50%); text-align: right; }

  .ai-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin-bottom: 16px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .ai-slider-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin-bottom: 20px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .ai-slider-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-slider-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-slider-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  @media screen and (max-width: 1024px) {
    .ai-slider-wrapper-{{ ai_gen_id }} { height: {{ block.settings.slider_height_tablet }}px; }
  }
  @media screen and (max-width: 749px) {
    .ai-slider-wrapper-{{ ai_gen_id }} { height: {{ block.settings.slider_height_mobile }}px; }
  }
{% endstyle %}

<slider-component-{{ ai_gen_id }}
  class="ai-slider-container-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
>
  <div class="ai-slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-slider-track-{{ ai_gen_id }}">
      {% for i in (1..2) %}
        {% liquid
          assign enabled_key = 'slide_' | append: i | append: '_enabled'
          assign img_desktop_key = 'slide_' | append: i | append: '_image_desktop'
          assign img_tablet_key = 'slide_' | append: i | append: '_image_tablet'
          assign img_mobile_key = 'slide_' | append: i | append: '_image_mobile'
          assign title_key = 'slide_' | append: i | append: '_title'
          assign subtitle_key = 'slide_' | append: i | append: '_subtitle'
          assign cta_text_key = 'slide_' | append: i | append: '_cta_text'
          assign cta_url_key = 'slide_' | append: i | append: '_cta_url'
          assign cta_position_key = 'slide_' | append: i | append: '_cta_position'

          assign slide_enabled = block.settings[enabled_key]
          assign img_desktop = block.settings[img_desktop_key]
          assign img_tablet = block.settings[img_tablet_key]
          assign img_mobile = block.settings[img_mobile_key]
          assign slide_title = block.settings[title_key]
          assign slide_subtitle = block.settings[subtitle_key]
          assign slide_cta_text = block.settings[cta_text_key]
          assign slide_cta_url = block.settings[cta_url_key]
          assign cta_position = block.settings[cta_position_key]
        %}
        {% if slide_enabled %}
          <div class="ai-slider-slide-{{ ai_gen_id }}">
            <picture>
              {% if img_mobile %}
                <source media="(max-width:749px)" srcset="{{ img_mobile | image_url: width: 900 }}">
              {% endif %}
              {% if img_tablet %}
                <source media="(max-width:1024px)" srcset="{{ img_tablet | image_url: width: 1200 }}">
              {% endif %}
              {% if img_desktop %}
                <img src="{{ img_desktop | image_url: width: 2000 }}" alt="slide {{ i }}" class="ai-slider-image-{{ ai_gen_id }}">
              {% else %}
                <div style="background:#f2f2f2;display:flex;align-items:center;justify-content:center;height:100%;width:100%;color:#999;">Sin imagen</div>
              {% endif %}
            </picture>

            {% if block.settings.show_overlay %}
              <div class="ai-slider-overlay-{{ ai_gen_id }}"></div>
            {% endif %}

            {% if slide_title or slide_subtitle or slide_cta_text %}
              <div class="ai-slider-content-{{ ai_gen_id }} {{ cta_position }}">
                {% if slide_title and block.settings.show_titles %}
                  <h2 class="ai-slider-title-{{ ai_gen_id }}">{{ slide_title }}</h2>
                {% endif %}
                {% if slide_subtitle and block.settings.show_subtitles %}
                  <p class="ai-slider-subtitle-{{ ai_gen_id }}">{{ slide_subtitle }}</p>
                {% endif %}
                {% if slide_cta_text and slide_cta_url and block.settings.show_cta %}
                  <a href="{{ slide_cta_url }}" class="ai-slider-cta-{{ ai_gen_id }}">{{ slide_cta_text }}</a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</slider-component-{{ ai_gen_id }}>

<script>
  (function() {
    class SliderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.current = 0;
        this.track = null;
        this.slides = [];
        this.autoplay = this.dataset.autoplay === 'true';
        this.speed = parseInt(this.dataset.autoplaySpeed) * 1000 || 5000;
      }
      connectedCallback() {
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slider-slide-{{ ai_gen_id }}');
        if (this.slides.length < 2) return;
        if (this.autoplay) this.startAutoplay();
      }
      startAutoplay() {
        this.interval = setInterval(() => {
          this.current = (this.current + 1) % this.slides.length;
          this.track.style.transform = `translateX(-${this.current * 100}%)`;
        }, this.speed);
      }
      disconnectedCallback() {
        if (this.interval) clearInterval(this.interval);
      }
    }
    customElements.define('slider-component-{{ ai_gen_id }}', SliderComponent{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Slider Mejorado",
  "settings": [
    { "type": "header", "content": "Configuración general" },
    { "type": "range", "id": "slider_height", "min": 300, "max": 800, "step": 50, "unit": "px", "label": "Altura desktop", "default": 500 },
    { "type": "range", "id": "slider_height_tablet", "min": 200, "max": 600, "step": 50, "unit": "px", "label": "Altura tablet", "default": 400 },
    { "type": "range", "id": "slider_height_mobile", "min": 200, "max": 500, "step": 50, "unit": "px", "label": "Altura móvil", "default": 300 },
    { "type": "range", "id": "border_radius", "min": 0, "max": 40, "step": 2, "unit": "px", "label": "Radio del borde", "default": 0 },
    { "type": "checkbox", "id": "autoplay", "label": "Reproducción automática", "default": true },
    { "type": "range", "id": "autoplay_speed", "min": 2, "max": 10, "step": 1, "unit": "s", "label": "Velocidad (segundos)", "default": 5 },
    { "type": "checkbox", "id": "show_overlay", "label": "Mostrar overlay", "default": true },
    { "type": "range", "id": "overlay_opacity", "min": 0, "max": 80, "step": 5, "unit": "%", "label": "Opacidad overlay", "default": 30 },
    { "type": "checkbox", "id": "show_titles", "label": "Mostrar títulos", "default": true },
    { "type": "checkbox", "id": "show_subtitles", "label": "Mostrar subtítulos", "default": true },
    { "type": "checkbox", "id": "show_cta", "label": "Mostrar CTA", "default": true },
    { "type": "color", "id": "text_color", "label": "Color del texto", "default": "#ffffff" },

    { "type": "header", "content": "Estilo del botón CTA" },
    { "type": "color", "id": "button_bg_color", "label": "Color de fondo", "default": "#000000" },
    { "type": "color", "id": "button_text_color", "label": "Color del texto", "default": "#ffffff" },
    { "type": "color", "id": "button_hover_bg_color", "label": "Color hover fondo", "default": "#333333" },
    { "type": "color", "id": "button_hover_text_color", "label": "Color hover texto", "default": "#ffffff" },
    { "type": "color", "id": "button_border_color", "label": "Color borde", "default": "#000000" },
    { "type": "range", "id": "button_border_width", "min": 0, "max": 4, "step": 1, "unit": "px", "label": "Grosor borde", "default": 1 },
    { "type": "range", "id": "button_border_radius", "min": 0, "max": 40, "step": 2, "unit": "px", "label": "Radio borde", "default": 4 },
    { "type": "range", "id": "button_text_size", "min": 12, "max": 20, "step": 1, "unit": "px", "label": "Tamaño texto", "default": 16 },
    { "type": "range", "id": "button_padding_horizontal", "min": 10, "max": 40, "step": 2, "unit": "px", "label": "Padding horizontal", "default": 20 },
    { "type": "range", "id": "button_padding_vertical", "min": 4, "max": 20, "step": 2, "unit": "px", "label": "Padding vertical", "default": 8 },

    { "type": "header", "content": "Slide 1" },
    { "type": "checkbox", "id": "slide_1_enabled", "label": "Activar slide 1", "default": true },
    { "type": "image_picker", "id": "slide_1_image_desktop", "label": "Imagen escritorio" },
    { "type": "image_picker", "id": "slide_1_image_tablet", "label": "Imagen tablet" },
    { "type": "image_picker", "id": "slide_1_image_mobile", "label": "Imagen móvil" },
    { "type": "text", "id": "slide_1_title", "label": "Título", "default": "Título del slide 1" },
    { "type": "text", "id": "slide_1_subtitle", "label": "Subtítulo", "default": "Subtítulo descriptivo" },
    { "type": "text", "id": "slide_1_cta_text", "label": "Texto botón", "default": "Ver más" },
    { "type": "url", "id": "slide_1_cta_url", "label": "Enlace botón" },
    {
      "type": "radio",
      "id": "slide_1_cta_position",
      "label": "Posición contenido",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    },

    { "type": "header", "content": "Slide 2" },
    { "type": "checkbox", "id": "slide_2_enabled", "label": "Activar slide 2", "default": true },
    { "type": "image_picker", "id": "slide_2_image_desktop", "label": "Imagen escritorio" },
    { "type": "image_picker", "id": "slide_2_image_tablet", "label": "Imagen tablet" },
    { "type": "image_picker", "id": "slide_2_image_mobile", "label": "Imagen móvil" },
    { "type": "text", "id": "slide_2_title", "label": "Título", "default": "Título del slide 2" },
    { "type": "text", "id": "slide_2_subtitle", "label": "Subtítulo", "default": "Subtítulo descriptivo" },
    { "type": "text", "id": "slide_2_cta_text", "label": "Texto botón", "default": "Ver más" },
    { "type": "url", "id": "slide_2_cta_url", "label": "Enlace botón" },
    {
      "type": "radio",
      "id": "slide_2_cta_position",
      "label": "Posición contenido",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    }
  ],
  "presets": [
    { "name": "Slider Mejorado" }
  ]
}
{% endschema %}
